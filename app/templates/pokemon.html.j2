{% extends 'base.html.j2' %}

{% block title %}
Pokemon Results
{% endblock %}

{% block content %}
    <h1>Pokemon</h1>
    <form method="POST" action="/pokemon">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="name" class="form-control" id="name">
    </div>
  

    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    {% if pokemon %}
        <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="col">Name</th>
            <th scope="col">Base hp</th>
            <th scope="col">Base defense</th>
            <th scope="col">Base attack</th>
            <th scope="col">Sprite Url</th>
            </tr> 
        </thead>
        <tbody>
            
            <tr>
            <th scope="row">{{pokemon['name']}}</th>
            <td>{{pokemon['base_hp']}}</td>
            <td>{{pokemon['base_defense']}}</td>
            <td>{{pokemon['base_attack']}}</td>
            <td>{{pokemon['sprite_url']}}</td>
            </tr>            
        </tbody>
        </table>
    {% else %}
    Enter the name of the Pokemon you want to look at
    {% endif %}


{% endblock %}       